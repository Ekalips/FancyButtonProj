<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FancyButton">
        <attr name="f_btnStyle" format="enum">
            <enum name="stroke" value="0"/>
            <enum name="fill" value="1"/>
            <enum name="stroke_fill" value="2"/>
        </attr>
        <attr name="f_text" format="string"/>
        <attr name="f_textColor" format="color"/>
        <attr name="f_fillColor" format="color"/>
        <attr name="f_strokeColor" format="color"/>
        <attr name="f_progressColor" format="color"/>
        <attr name="f_hideFillAfterCollapse" format="boolean"/>
        <attr name="f_strokeWidth" format="integer"/>
        <attr name="f_capsText" format="boolean"/>
        <attr name="f_textSize" format="dimension"/>
        //Adding new Attribute Background
        <attr name="f_background" format="reference"/>
        <attr name="f_textFont" format="string"/>
        <attr name="f_textAppearance" format="string"/>

    </declare-styleable>
</resources>